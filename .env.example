# Copy to .env and fill in values

# Async URL used by FastAPI app
DATABASE_URL=postgresql+asyncpg://forecasting:forecasting@db:5432/forecasting

# Sync URL used by Alembic migrations (psycopg2 driver)
SYNC_DATABASE_URL=postgresql+psycopg2://forecasting:forecasting@db:5432/forecasting

DB_USER=forecasting
DB_PASSWORD=change_me_in_production
DB_NAME=forecasting

# Frontend origins allowed for CORS (comma-separated for multi)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Max upload size in MB
UPLOAD_MAX_MB=50
